bunga <- function(num, A, k, t, m=TRUE)
  switch(num, 
         satu = {
           tunggal = (A/k-1)/t
           print(tunggal)
         },
         dua = {
           majemuk = ((A/k)^(1/(m*t))-1)*m
           print(majemuk)
         },
         tiga = {
           kontinu = log(A/k)/t
           print(kontinu)
         }
  )
#Ket=> A:akumulasi k:modal t:tahun m:banyak bayar
